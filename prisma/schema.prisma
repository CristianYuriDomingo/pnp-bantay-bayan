generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                     String                    @id @default(cuid())
  name                   String?
  email                  String                    @unique
  emailVerified          DateTime?
  image                  String?
  password               String?
  role                   String                    @default("user")
  status                 String                    @default("active")
  totalXP                Int                       @default(0)
  level                  Int                       @default(1)

  // PNP Rank System Fields
  currentRank            String                    @default("Cadet")
  leaderboardPosition    Int?
  rankAchievedAt         DateTime                  @default(now())
  highestRankEver        String                    @default("Cadet")
  rankHistory            Json?
  lastActiveDate         DateTime                  @default(now())

  // Duty Pass & Streak System Fields (EXISTING)
  dutyPasses             Int                       @default(0)
  lastDutyPassClaim      DateTime?
  dutyPassUsedDates      Json?                     @default("[]")
  currentStreak          Int                       @default(0)
  longestStreak          Int                       @default(0)
  lastStreakUpdate       DateTime?
  streakProtectedUntil   DateTime?

  // ðŸ†• NEW: Weekly Quest System Fields
  timezone               String                    @default("Asia/Manila")
  weeklyQuestStartDate   DateTime?                 // Monday 00:00 of current week
  lastQuestCompletedAt   DateTime?                 // Last time user completed any quest

  createdAt              DateTime                  @default(now())
  updatedAt              DateTime                  @updatedAt
  resetToken             String?
  resetTokenExpiry       DateTime?
  
  // Relations
  accounts               Account[]
  sessions               Session[]
  quizAttempts           QuizAttempt[]
  quizMasteries          QuizMastery[]
  badgeEarned            UserBadge[]
  progress               UserProgress[]
  achievementsEarned     UserAchievement[]
  questMondayProgress    QuestMondayProgress[]
  questTuesdayProgress   QuestTuesdayProgress[]
  questWednesdayProgress QuestWednesdayProgress[]
  questThursdayProgress  QuestThursdayProgress[]
  questFridayProgress    QuestFridayProgress[]
  
  // ðŸ†• NEW: Weekly Quest Progress Relation
  weeklyProgress         WeeklyQuestProgress[]

  @@index([resetToken])
  @@index([totalXP])
  @@index([currentRank])
  @@index([leaderboardPosition])
  @@index([lastDutyPassClaim])
  @@index([currentStreak])
  @@index([lastStreakUpdate])
  @@index([weeklyQuestStartDate])  // ðŸ†• NEW INDEX
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Module {
  id        String         @id @default(cuid())
  title     String
  image     String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  lessons   Lesson[]
  progress  UserProgress[]

  @@map("modules")
}

model Lesson {
  id           String         @id @default(cuid())
  title        String
  description  String
  bubbleSpeech String?
  timer        Int            @default(300)
  moduleId     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  module       Module         @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  tips         Tip[]
  progress     UserProgress[]

  @@map("lessons")
}

model Tip {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String?
  lessonId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@map("tips")
}

model UserProgress {
  id        String   @id @default(cuid())
  userId    String
  moduleId  String
  lessonId  String?
  completed Boolean  @default(false)
  timeSpent Int?
  progress  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lesson    Lesson?  @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  module    Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleId, lessonId])
  @@index([userId])
  @@index([moduleId])
  @@map("user_progress")
}

model Badge {
  id            String      @id @default(cuid())
  name          String
  description   String
  image         String
  category      String
  rarity        String      @default("Common")
  xpValue       Int         @default(0)
  triggerType   String
  triggerValue  String
  prerequisites String[]
  masteryLevel  String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  userBadges    UserBadge[]

  @@index([rarity])
  @@index([masteryLevel])
  @@map("badges")
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  xpAwarded Int      @default(0)
  earnedAt  DateTime @default(now())
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([earnedAt])
  @@map("user_badges")
}

model Achievement {
  id               String              @id @default(cuid())
  code             String              @unique
  name             String
  description      String
  icon             String?
  category         String
  type             String
  xpReward         Int                 @default(0)
  
  criteriaType     String
  criteriaValue    String
  criteriaData     Json?
  
  sortOrder        Int                 @default(0)
  isActive         Boolean             @default(true)
  
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  
  userAchievements UserAchievement[]

  @@index([category])
  @@index([type])
  @@index([isActive])
  @@map("achievements")
}

model UserAchievement {
  id            String      @id @default(cuid())
  userId        String
  achievementId String
  xpAwarded     Int         @default(0)
  earnedAt      DateTime    @default(now())
  notificationSeen Boolean  @default(false)
  
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
  @@index([earnedAt])
  @@index([notificationSeen])
  @@map("user_achievements")
}

model Quiz {
  id            String        @id @default(cuid())
  title         String
  timer         Int           @default(30)
  parentId      String?
  isParent      Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  questions     Question[]
  quizAttempts  QuizAttempt[]
  quizMasteries QuizMastery[]
  parent        Quiz?         @relation("QuizHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children      Quiz[]        @relation("QuizHierarchy")

  @@index([parentId])
  @@index([isParent])
  @@map("quizzes")
}

model Question {
  id            String   @id @default(cuid())
  question      String
  lesson        String
  image         String?
  options       String[]
  correctAnswer Int
  explanation   String?
  quizId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@map("questions")
}

model QuizAttempt {
  id             String   @id @default(cuid())
  userId         String
  quizId         String
  score          Int
  totalQuestions Int
  percentage     Float
  timeSpent      Int
  timeAllowed    Int
  timeEfficiency Float
  masteryScore   Float
  masteryLevel   String?
  answers        Json
  createdAt      DateTime @default(now())
  quiz           Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([quizId])
  @@index([userId, quizId])
  @@map("quiz_attempts")
}

model QuizMastery {
  id                  String   @id @default(cuid())
  userId              String
  quizId              String
  bestScore           Int
  bestPercentage      Float
  bestMasteryScore    Float
  currentMasteryLevel String?
  attemptCount        Int      @default(1)
  firstAttemptAt      DateTime @default(now())
  bestAttemptAt       DateTime @default(now())
  lastAttemptAt       DateTime @default(now())
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  quiz                Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, quizId])
  @@index([userId])
  @@index([quizId])
  @@index([currentMasteryLevel])
  @@map("quiz_mastery")
}

// ============================================
// QUEST MONDAY - SUSPECT LINE-UP GAME
// ============================================

model QuestMonday {
  id          String                  @id @default(cuid())
  title       String                  @default("Suspect Line-Up")
  description String?
  isActive    Boolean                 @default(true)
  createdById String
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  
  levels      QuestMondayLevel[]
  progress    QuestMondayProgress[]
  
  @@map("quest_monday")
}

model QuestMondayLevel {
  id            String                @id @default(cuid())
  questMondayId String
  levelNumber   Int
  description   String
  orderIndex    Int                   @default(0)
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  
  questMonday   QuestMonday           @relation(fields: [questMondayId], references: [id], onDelete: Cascade)
  suspects      QuestMondaySuspect[]
  
  @@unique([questMondayId, levelNumber])
  @@index([questMondayId])
  @@index([levelNumber])
  @@map("quest_monday_levels")
}

model QuestMondaySuspect {
  id            String            @id @default(cuid())
  levelId       String
  imageUrl      String
  isCorrect     Boolean           @default(false)
  suspectNumber Int
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  
  level         QuestMondayLevel  @relation(fields: [levelId], references: [id], onDelete: Cascade)
  
  @@unique([levelId, suspectNumber])
  @@index([levelId])
  @@map("quest_monday_suspects")
}

model QuestMondayProgress {
  id              String       @id @default(cuid())
  userId          String
  questMondayId   String
  currentLevel    Int          @default(1)
  completedLevels Json         @default("[]")
  isCompleted     Boolean      @default(false)
  attempts        Int          @default(0)
  startedAt       DateTime     @default(now())
  completedAt     DateTime?
  lastPlayedAt    DateTime     @default(now())
  
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  questMonday     QuestMonday  @relation(fields: [questMondayId], references: [id], onDelete: Cascade)
  
  @@unique([userId, questMondayId])
  @@index([userId])
  @@index([questMondayId])
  @@index([isCompleted])
  @@map("quest_monday_progress")
}

// ============================================
// QUEST TUESDAY - TRUE/FALSE GAME
// ============================================

model QuestTuesday {
  id          String                    @id @default(cuid())
  title       String                    @default("Free or Jail Quiz")
  lives       Int                       @default(3)
  isActive    Boolean                   @default(true)
  createdById String
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  
  questions   QuestTuesdayQuestion[]
  progress    QuestTuesdayProgress[]
  
  @@map("quest_tuesday")
}

model QuestTuesdayQuestion {
  id              String         @id @default(cuid())
  questTuesdayId  String
  questionNumber  Int
  question        String
  correctAnswer   Boolean
  explanation     String
  orderIndex      Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  questTuesday    QuestTuesday   @relation(fields: [questTuesdayId], references: [id], onDelete: Cascade)
  
  @@unique([questTuesdayId, questionNumber])
  @@index([questTuesdayId])
  @@index([questionNumber])
  @@map("quest_tuesday_questions")
}

model QuestTuesdayProgress {
  id                String       @id @default(cuid())
  userId            String
  questTuesdayId    String
  currentQuestion   Int          @default(1)
  completedQuestions Json        @default("[]")
  answeredQuestions Json         @default("[]")
  livesRemaining    Int          @default(3)
  score             Int          @default(0)
  isCompleted       Boolean      @default(false)
  isFailed          Boolean      @default(false)
  startedAt         DateTime     @default(now())
  completedAt       DateTime?
  lastPlayedAt      DateTime     @default(now())
  
  user              User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  questTuesday      QuestTuesday @relation(fields: [questTuesdayId], references: [id], onDelete: Cascade)
  
  @@unique([userId, questTuesdayId])
  @@index([userId])
  @@index([questTuesdayId])
  @@index([isCompleted])
  @@index([isFailed])
  @@map("quest_tuesday_progress")
}

// ============================================
// QUEST WEDNESDAY - CODE THE CALL
// ============================================

model QuestWednesday {
  id              String                    @id @default(cuid())
  title           String                    @default("Code the Call")
  description     String
  networkName     String
  correctNumber   String
  shuffledDigits  Json
  isActive        Boolean                   @default(true)
  createdById     String
  createdAt       DateTime                  @default(now())
  updatedAt       DateTime                  @updatedAt
  
  progress        QuestWednesdayProgress[]
  
  @@map("quest_wednesday")
}

model QuestWednesdayProgress {
  id                String         @id @default(cuid())
  userId            String
  questWednesdayId  String
  userAnswer        String?
  isCorrect         Boolean        @default(false)
  isCompleted       Boolean        @default(false)
  attempts          Int            @default(0)
  startedAt         DateTime       @default(now())
  completedAt       DateTime?
  lastPlayedAt      DateTime       @default(now())
  
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  questWednesday    QuestWednesday @relation(fields: [questWednesdayId], references: [id], onDelete: Cascade)
  
  @@unique([userId, questWednesdayId])
  @@index([userId])
  @@index([questWednesdayId])
  @@index([isCompleted])
  @@map("quest_wednesday_progress")
}

// ============================================
// QUEST THURSDAY - CONFISCATE OR ALLOW GAME
// ============================================

model QuestThursday {
  id          String                    @id @default(cuid())
  title       String                    @default("Confiscate or Allow")
  lives       Int                       @default(3)
  isActive    Boolean                   @default(true)
  createdById String
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  
  items       QuestThursdayItem[]
  progress    QuestThursdayProgress[]
  
  @@map("quest_thursday")
}

model QuestThursdayItem {
  id              String         @id @default(cuid())
  questThursdayId String
  itemName        String
  itemImage       String
  isAllowed       Boolean        @default(false)
  explanation     String
  orderIndex      Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  questThursday   QuestThursday  @relation(fields: [questThursdayId], references: [id], onDelete: Cascade)
  
  @@index([questThursdayId])
  @@index([orderIndex])
  @@map("quest_thursday_items")
}

model QuestThursdayProgress {
  id                String         @id @default(cuid())
  userId            String
  questThursdayId   String
  currentItem       Int            @default(1)
  completedItems    Json           @default("[]")
  answeredItems     Json           @default("[]")
  livesRemaining    Int            @default(3)
  score             Int            @default(0)
  isCompleted       Boolean        @default(false)
  isFailed          Boolean        @default(false)
  startedAt         DateTime       @default(now())
  completedAt       DateTime?
  lastPlayedAt      DateTime       @default(now())
  
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  questThursday     QuestThursday  @relation(fields: [questThursdayId], references: [id], onDelete: Cascade)
  
  @@unique([userId, questThursdayId])
  @@index([userId])
  @@index([questThursdayId])
  @@index([isCompleted])
  @@index([isFailed])
  @@map("quest_thursday_progress")
}

// ============================================
// QUEST FRIDAY - GUESS THE RANK GAME
// ============================================

model QuestFriday {
  id          String                  @id @default(cuid())
  title       String                  @default("Guess The Rank")
  instruction String
  isActive    Boolean                 @default(true)
  createdById String
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  
  rankOptions QuestFridayRankOption[]
  progress    QuestFridayProgress[]
  
  @@map("quest_friday")
}

model QuestFridayRankOption {
  id            String       @id @default(cuid())
  questFridayId String
  rankName      String
  rankImage     String
  isCorrect     Boolean      @default(false)
  orderIndex    Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  
  questFriday   QuestFriday  @relation(fields: [questFridayId], references: [id], onDelete: Cascade)
  
  @@index([questFridayId])
  @@index([orderIndex])
  @@map("quest_friday_rank_options")
}

model QuestFridayProgress {
  id            String       @id @default(cuid())
  userId        String
  questFridayId String
  selectedRank  String?
  isCorrect     Boolean      @default(false)
  isCompleted   Boolean      @default(false)
  attempts      Int          @default(0)
  startedAt     DateTime     @default(now())
  completedAt   DateTime?
  lastPlayedAt  DateTime     @default(now())
  
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  questFriday   QuestFriday  @relation(fields: [questFridayId], references: [id], onDelete: Cascade)
  
  @@unique([userId, questFridayId])
  @@index([userId])
  @@index([questFridayId])
  @@index([isCompleted])
  @@map("quest_friday_progress")
}

// ============================================
// ðŸ†• NEW: WEEKLY QUEST PROGRESS SYSTEM
// ============================================

model WeeklyQuestProgress {
  id                   String    @id @default(cuid())
  userId               String
  weekStartDate        DateTime  // Monday 00:00 user timezone
  
  // Progress tracking
  completedDays        Json      @default("[]")  // Array: ["monday", "tuesday", "friday"]
  totalQuestsCompleted Int       @default(0)     // Count: 0-5
  
  // Reward chest
  rewardClaimed        Boolean   @default(false)
  rewardXP             Int       @default(0)
  claimedAt            DateTime?
  
  // Timestamps
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  
  // Relations
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, weekStartDate])
  @@index([userId])
  @@index([weekStartDate])
  @@map("weekly_quest_progress")
}