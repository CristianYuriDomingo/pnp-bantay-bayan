// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // Remove the custom output path to use default location
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider
  role          String    @default("user") // Custom field
  status        String    @default("active") // Add this field for user status
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  progress      UserProgress[]  // Add this relation
  badgeEarned   UserBadge[]     // New relation for earned badges
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

// New models for your learning management system
model Module {
  id          String   @id @default(cuid())
  title       String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  lessons     Lesson[]
  progress    UserProgress[]
  badges      Badge[]     // New relation for module-specific badges
  
  @@map("modules")
}

model Lesson {
  id           String   @id @default(cuid())
  title        String
  description  String
  bubbleSpeech String?
  timer        Int      @default(300) // Changed from 50 to 300 seconds (5 minutes)
  moduleId     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  module       Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  tips         Tip[]
  progress     UserProgress[]
  
  @@map("lessons")
}

model Tip {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String?  // Optional image for tips
  lessonId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  @@map("tips")
}

// NEW: Progress tracking model
model UserProgress {
  id        String   @id @default(cuid())
  userId    String
  moduleId  String
  lessonId  String?
  completed Boolean  @default(false)
  timeSpent Int?     // seconds spent
  progress  Float    @default(0) // percentage progress (0-100)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  module Module  @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  lesson Lesson? @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  @@unique([userId, moduleId, lessonId])
  @@index([userId])    // ADD THIS LINE for performance
  @@index([moduleId])  // ADD THIS LINE for performance
  @@map("user_progress")
}

// NEW: Badge System Models
model Badge {
  id            String   @id @default(cuid())
  name          String
  description   String
  image         String   // Badge icon/image URL
  category      String   // Crime Prevention, Cyber Security, Emergency Preparedness, etc.
  rarity        String   @default("Common") // Common, Rare, Epic, Legendary
  criteriaType  String   // module_complete, lessons_complete, quiz_score, manual
  criteriaValue Json?    // Flexible criteria storage (e.g., {"moduleId": "xyz", "requiredScore": 90})
  prerequisite  String?  // Optional prerequisite badge ID
  active        Boolean  @default(true)
  moduleId      String?  // Optional: if badge is specific to a module
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  module        Module?    @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  userBadges    UserBadge[]
  prerequisites Badge?     @relation("BadgePrerequisites", fields: [prerequisite], references: [id])
  dependents    Badge[]    @relation("BadgePrerequisites")
  
  @@map("badges")
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  earnedAt  DateTime @default(now())
  progress  Float    @default(0) // For tracking progress toward badge (0-100)
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, badgeId])
  @@index([userId])
  @@map("user_badges")
}

model Quiz {
  id          String   @id @default(cuid())
  title       String
  timer       Int      @default(30) // Timer per question in seconds
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  questions   Question[]
  
  @@map("quizzes")
}

model Question {
  id            String   @id @default(cuid())
  question      String
  lesson        String   // Lesson name (e.g., "Crime Prevention", "Cyber Security")
  image         String?  // Optional image URL for the question
  options       String[] // Array of 4 options
  correctAnswer Int      // Index of correct answer (0-3)
  explanation   String?  // Optional explanation for the correct answer
  quizId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  @@map("questions")
}