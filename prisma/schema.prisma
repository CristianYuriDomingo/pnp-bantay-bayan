generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                   String              @id @default(cuid())
  name                 String?
  email                String              @unique
  emailVerified        DateTime?
  image                String?
  password             String?
  role                 String              @default("user")
  status               String              @default("active")
  totalXP              Int                 @default(0)
  level                Int                 @default(1)

  // PNP Rank System Fields - UPDATED: Changed default from "Pat" to "Cadet"
  currentRank          String              @default("Cadet")
  leaderboardPosition  Int?
  rankAchievedAt       DateTime            @default(now())
  highestRankEver      String              @default("Cadet")
  rankHistory          Json?
  lastActiveDate       DateTime            @default(now())

  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  resetToken           String?
  resetTokenExpiry     DateTime?
  
  // Relations
  accounts             Account[]
  sessions             Session[]
  quizAttempts         QuizAttempt[]
  quizMasteries        QuizMastery[]
  badgeEarned          UserBadge[]
  progress             UserProgress[]
  achievementsEarned   UserAchievement[]
  questMondayProgress  QuestMondayProgress[]

  @@index([resetToken])
  @@index([totalXP])
  @@index([currentRank])
  @@index([leaderboardPosition])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Module {
  id        String         @id @default(cuid())
  title     String
  image     String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  lessons   Lesson[]
  progress  UserProgress[]

  @@map("modules")
}

model Lesson {
  id           String         @id @default(cuid())
  title        String
  description  String
  bubbleSpeech String?
  timer        Int            @default(300)
  moduleId     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  module       Module         @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  tips         Tip[]
  progress     UserProgress[]

  @@map("lessons")
}

model Tip {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String?
  lessonId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@map("tips")
}

model UserProgress {
  id        String   @id @default(cuid())
  userId    String
  moduleId  String
  lessonId  String?
  completed Boolean  @default(false)
  timeSpent Int?
  progress  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lesson    Lesson?  @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  module    Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleId, lessonId])
  @@index([userId])
  @@index([moduleId])
  @@map("user_progress")
}

model Badge {
  id            String      @id @default(cuid())
  name          String
  description   String
  image         String
  category      String
  rarity        String      @default("Common")
  xpValue       Int         @default(0)
  triggerType   String
  triggerValue  String
  prerequisites String[]
  masteryLevel  String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  userBadges    UserBadge[]

  @@index([rarity])
  @@index([masteryLevel])
  @@map("badges")
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  xpAwarded Int      @default(0)
  earnedAt  DateTime @default(now())
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([earnedAt])
  @@map("user_badges")
}

// Achievement Model (NO RARITY)
model Achievement {
  id               String              @id @default(cuid())
  code             String              @unique  // e.g., "identity-established", "rank-pco1"
  name             String                       // e.g., "Identity Established"
  description      String                       // e.g., "Set your username"
  icon             String?                      // Icon path or emoji
  category         String                       // e.g., "Profile", "Rank Promotions", "Learning Badges"
  type             String                       // e.g., "profile", "rank", "badge_milestone"
  xpReward         Int                 @default(0)         // XP awarded (ONLY for profile/rank, 0 for badges)
  
  // Unlock criteria (stored as JSON for flexibility)
  criteriaType     String                       // e.g., "profile_field", "rank_achieved", "badge_count"
  criteriaValue    String                       // e.g., "name", "PCO1", "5"
  criteriaData     Json?                        // Additional criteria data if needed
  
  // Metadata
  sortOrder        Int                 @default(0)         // Display order
  isActive         Boolean             @default(true)      // Can be disabled without deleting
  
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  
  // Relations
  userAchievements UserAchievement[]

  @@index([category])
  @@index([type])
  @@index([isActive])
  @@map("achievements")
}

model UserAchievement {
  id            String      @id @default(cuid())
  userId        String
  achievementId String
  xpAwarded     Int         @default(0)  // Actual XP awarded (for audit trail)
  earnedAt      DateTime    @default(now())
  notificationSeen Boolean  @default(false)  // For future notification system
  
  // Relations
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])  // User can only earn each achievement once
  @@index([userId])
  @@index([earnedAt])
  @@index([notificationSeen])
  @@map("user_achievements")
}

model Quiz {
  id            String        @id @default(cuid())
  title         String
  timer         Int           @default(30)
  parentId      String?
  isParent      Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  questions     Question[]
  quizAttempts  QuizAttempt[]
  quizMasteries QuizMastery[]
  parent        Quiz?         @relation("QuizHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children      Quiz[]        @relation("QuizHierarchy")

  @@index([parentId])
  @@index([isParent])
  @@map("quizzes")
}

model Question {
  id            String   @id @default(cuid())
  question      String
  lesson        String
  image         String?
  options       String[]
  correctAnswer Int
  explanation   String?
  quizId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@map("questions")
}

model QuizAttempt {
  id             String   @id @default(cuid())
  userId         String
  quizId         String
  score          Int
  totalQuestions Int
  percentage     Float
  timeSpent      Int
  timeAllowed    Int
  timeEfficiency Float
  masteryScore   Float
  masteryLevel   String?
  answers        Json
  createdAt      DateTime @default(now())
  quiz           Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([quizId])
  @@index([userId, quizId])
  @@map("quiz_attempts")
}

model QuizMastery {
  id                  String   @id @default(cuid())
  userId              String
  quizId              String
  bestScore           Int
  bestPercentage      Float
  bestMasteryScore    Float
  currentMasteryLevel String?
  attemptCount        Int      @default(1)
  firstAttemptAt      DateTime @default(now())
  bestAttemptAt       DateTime @default(now())
  lastAttemptAt       DateTime @default(now())
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  quiz                Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, quizId])
  @@index([userId])
  @@index([quizId])
  @@index([currentMasteryLevel])
  @@map("quiz_mastery")
}

// ============================================
// QUEST MONDAY - SUSPECT LINE-UP GAME
// ============================================

model QuestMonday {
  id          String                  @id @default(cuid())
  title       String                  @default("Suspect Line-Up")
  description String?
  isActive    Boolean                 @default(true)
  createdById String
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  
  // Relations
  levels      QuestMondayLevel[]
  progress    QuestMondayProgress[]
  
  @@map("quest_monday")
}

model QuestMondayLevel {
  id            String                @id @default(cuid())
  questMondayId String
  levelNumber   Int                   // 1, 2, 3, etc.
  description   String                // "Wearing red cap, tattoo on right arm"
  orderIndex    Int                   @default(0)
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  
  // Relations
  questMonday   QuestMonday           @relation(fields: [questMondayId], references: [id], onDelete: Cascade)
  suspects      QuestMondaySuspect[]
  
  @@unique([questMondayId, levelNumber])
  @@index([questMondayId])
  @@index([levelNumber])
  @@map("quest_monday_levels")
}

model QuestMondaySuspect {
  id            String            @id @default(cuid())
  levelId       String
  imageUrl      String            // "/uploads/quest-monday/suspect1.png"
  isCorrect     Boolean           @default(false)
  suspectNumber Int               // 1, 2, 3, 4 (for display order)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  
  // Relations
  level         QuestMondayLevel  @relation(fields: [levelId], references: [id], onDelete: Cascade)
  
  @@unique([levelId, suspectNumber])
  @@index([levelId])
  @@map("quest_monday_suspects")
}

model QuestMondayProgress {
  id              String       @id @default(cuid())
  userId          String
  questMondayId   String
  currentLevel    Int          @default(1)
  completedLevels Json         @default("[]")  // Array of completed level numbers [1, 2]
  isCompleted     Boolean      @default(false)
  attempts        Int          @default(0)     // Failed attempts counter
  startedAt       DateTime     @default(now())
  completedAt     DateTime?
  lastPlayedAt    DateTime     @default(now())
  
  // Relations
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  questMonday     QuestMonday  @relation(fields: [questMondayId], references: [id], onDelete: Cascade)
  
  @@unique([userId, questMondayId])
  @@index([userId])
  @@index([questMondayId])
  @@index([isCompleted])
  @@map("quest_monday_progress")
}